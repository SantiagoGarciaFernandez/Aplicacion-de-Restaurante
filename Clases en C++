//MENU RESTAURANTE
#include <string>
#include <iostream>

using namespace std;


class Menu{
	private:
		string bigmac;
		string macpollo;
		string cajitafeliz;
		string refresco;

	public:
		void crearMenu(string bigmac, string macpollo, string cajitafeliz, string refresco);
		
		string getBigm()
		{
			return bigmac;
		}
		string getMacp()
		{
			return macpollo;
		}
		string getCajif()
		{
			return cajitafeliz;
		}
		string getRef()
		{
			return refresco;
		}
		
		void setBigm(string bm)
		{
			bigmac = bm;
		}
		void setMacp(string macp)
		{
			macpollo = macp;
		}
		void setCajif(string cajif)
		{
			cajitafeliz = cajif;
		} 
		void setRef(string ref)
		{
			refresco = ref;
		}
	

};




//Proyecto Restaurante
#include <string>
#include <iostream>

using namespace std;

class Usuario{
	private:
		string nombre;
		int telefono;
		string direccion;
		string pago;

	public:
		void crearUsuario(string nombre, int telefono, string direccion, string pago);
		
		string getNombre()
		{
			return nombre;
		}
		int getTel()
		{
			return telefono;
		}
		string getDir()
		{
			return direccion;
		}
		string getPago()
		{
			return pago;
		}
		
		void setNombre(string n)
		{
			nombre = n;
		}
		void setTel(int tel)
		{
			telefono = tel;
		}
		void setDir(string dir)
		{
			direccion = dir;
		} 
		void setPago(string pag)
		{
			pago = pag;
		}
	

};
/Horario Restaurante
#include <string>
#include <iostream>

using namespace std;

class Horario{
	private:
		int hora;
    public:
		
        void nuevoHorario(int hora);
		
		int getHora()
		{
			return hora;
		}
        void setHora(int hora)
        {
            hora = hora;
        }
};

//Juguete RESTAURANTE
#include <string>
#include <iostream>

using namespace std;


class Juguete{
	private:
		string groot;
        string barbie;
		

	public:
		void nuevoJuguete(string groot, string barbie);
		
		string getGroot()
		{
			return groot;
		}
        string getBarb()
		{
			return barbie;
		}
        void setGroot(string groot)
		{
			groot = groot;
        }
        void segBarb(string brb)
		{
			barbie = brb;
        }   

};    

//DESCRIPCION PLATILLO
#include <string>
#include <iostream>

using namespace std;


class Platillo{
	private:
		string nombre;
		string tipo;
		int costo;
		string descripcion;

	public:
		void crearMenu(string nombre, string tipo, int costo, string descripcion);
		
		string getNombre()
		{
			return nombre;
		}
        string getTipo()
		{
			return tipo;
		}
        int getCosto()
		{
			return costo;
		}
        string getDesc()
		{
			return descripcion;
		}
        void setNombre(string nom)
		{
			nombre = nom;
		}
		void setCosto(int c)
		{
			costo = c;
		}
        void setTipo(string t)
		{
			tipo = t;
		}void setDesc(string ds)
		{
			descripcion = ds;
		}
};
